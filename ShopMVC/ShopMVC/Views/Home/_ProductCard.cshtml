@model ProductModel

<style>

	.out-of-stock {
		opacity: 0.5;
		background-color: #f8f9fa;
	}


</style>
<div class="card col-xl-2 col-lg-4 col-md-6 col-sm-12 block-scale-hover @( Model.Amount == 0 ? "out-of-stock" : "")" style="border-radius: 0;">

	<img style="object-fit:contain;"
		 height="200"
		 src="~/images/@(string.IsNullOrWhiteSpace(Model.Image) ? "noimage.png" : $"products/{Model.Image}")"
		 class="card-img-top"
		 alt="@Model.Name">

	<div class="card-body">
		<h5 class="card-title">@Model.Name</h5>
		<h6>@(Model.Category != null ? Model.Category.Name : "Без категорії")</h6>

		<partial name="_Rating" model="Model.Rating" />

		@if (Model.Amount == 0)
		{
			<h5 class="text-danger fw-bold">Немає в наявності</h5>
		}
		else
		{
			<h2>@Model.Price.ToString("#.##") ₴</h2>
		}

		<a class="btn @( Model.Amount == 0 ? "btn-dark" : "btn-primary ")"
		   asp-controller="Shop"
		   asp-action="Details"
		   asp-route-id="@Model.Id">
			Деталі
		</a>
	</div>
</div>