<Window x:Class="SimpleExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Шлях:"/>
            <TextBox x:Name="PathBox" Margin="0,0,0,5"/>
            <Label Content="Слово:"/>
            <TextBox x:Name="WordBox" Margin="0,0,0,10"/>
        </StackPanel>

        <ProgressBar x:Name="MyProgressBar" Grid.Row="1" Height="20" Margin="0,0,0,10"/>

        <ListView x:Name="ResultList" Grid.Row="2" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Файл" DisplayMemberBinding="{Binding FileName}" Width="150"/>
                    <GridViewColumn Header="Кількість" DisplayMemberBinding="{Binding Count}" Width="80"/>
                    <GridViewColumn Header="Шлях" DisplayMemberBinding="{Binding FilePath}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Шукати" Width="100" Click="BtnSearch_Click" Margin="0,0,10,0"/>
            <Button Content="Зберегти" Width="100" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
